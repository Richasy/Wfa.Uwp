<app:CenterPopup
    x:Class="Wfa.App.Controls.Library.ArchwingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:Wfa.App.Controls.App"
    xmlns:community="using:Wfa.Models.Community"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:Wfa.App.Resources.Extensions"
    xmlns:market="using:Wfa.Models.Market"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Title="{ext:Locale Name=ArchwingDetail}"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <app:CommonImageEx
                Width="120"
                VerticalAlignment="Center"
                DecodePixelWidth="240"
                ImageUrl="{x:Bind ViewModel.Data.ImageName, Mode=OneWay, Converter={StaticResource LibraryImageConverter}}"
                Stretch="Uniform" />
            <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="{x:Bind ViewModel.Data.Name, Mode=OneWay}" />
                <Grid ColumnSpacing="12" RowSpacing="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <app:IconTextBlock
                        Symbol="Heart16"
                        Text="{x:Bind ViewModel.Data.Health, Mode=OneWay}"
                        ToolTipService.ToolTip="{ext:Locale Name=Health}" />
                    <muxc:ProgressBar
                        Grid.Column="1"
                        Maximum="{x:Bind ViewModel.PropertyMaxValue, Mode=OneWay}"
                        Value="{x:Bind ViewModel.Data.Health, Mode=OneWay}" />

                    <app:IconTextBlock
                        Grid.Row="1"
                        Symbol="Shield20"
                        Text="{x:Bind ViewModel.Data.Shield, Mode=OneWay}"
                        ToolTipService.ToolTip="{ext:Locale Name=Shield}" />
                    <muxc:ProgressBar
                        Grid.Row="1"
                        Grid.Column="1"
                        Maximum="{x:Bind ViewModel.PropertyMaxValue, Mode=OneWay}"
                        Value="{x:Bind ViewModel.Data.Shield, Mode=OneWay}" />

                    <app:IconTextBlock
                        Grid.Row="2"
                        Symbol="Target16"
                        Text="{x:Bind ViewModel.Data.Armor, Mode=OneWay}"
                        ToolTipService.ToolTip="{ext:Locale Name=Armor}" />
                    <muxc:ProgressBar
                        Grid.Row="2"
                        Grid.Column="1"
                        Maximum="{x:Bind ViewModel.PropertyMaxValue, Mode=OneWay}"
                        Value="{x:Bind ViewModel.Data.Armor, Mode=OneWay}" />

                    <app:IconTextBlock
                        Grid.Row="3"
                        Symbol="Flash16"
                        Text="{x:Bind ViewModel.Data.Power, Mode=OneWay}"
                        ToolTipService.ToolTip="{ext:Locale Name=Power}" />
                    <muxc:ProgressBar
                        Grid.Row="3"
                        Grid.Column="1"
                        Maximum="{x:Bind ViewModel.PropertyMaxValue, Mode=OneWay}"
                        Value="{x:Bind ViewModel.Data.Power, Mode=OneWay}" />
                </Grid>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="RelatedItemsButton"
                HorizontalAlignment="Stretch"
                IsEnabled="{x:Bind ViewModel.HasMarketItems, Mode=OneWay}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <app:WfaIcon
                        VerticalAlignment="Center"
                        FontSize="14"
                        Symbol="WarframeMarket" />
                    <TextBlock VerticalAlignment="Center" Text="{ext:Locale Name=RelatedMarketItem}" />
                </StackPanel>
                <Button.Flyout>
                    <Flyout FlyoutPresenterStyle="{StaticResource ThinPaddingFlyoutPresenterStyle}" Placement="Bottom">
                        <muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.MarketItems}">
                            <muxc:ItemsRepeater.Layout>
                                <muxc:StackLayout Spacing="2" />
                            </muxc:ItemsRepeater.Layout>
                            <muxc:ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="market:MarketItem">
                                    <app:CardPanel
                                        HorizontalAlignment="Stretch"
                                        Background="Transparent"
                                        Click="OnMarketItemClick"
                                        MinWidth="200"
                                        DataContext="{x:Bind}"
                                        IsEnableHoverAnimation="False"
                                        StrokeThickness="0">
                                        <Grid Padding="12,8" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <app:CommonImageEx
                                                Width="40"
                                                Height="40"
                                                VerticalAlignment="Center"
                                                DecodePixelWidth="80"
                                                ImageUrl="{x:Bind Thumb, Converter={StaticResource MarketThumbConverter}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Text="{x:Bind Name}"
                                                TextTrimming="CharacterEllipsis" />
                                        </Grid>
                                    </app:CardPanel>
                                </DataTemplate>
                            </muxc:ItemsRepeater.ItemTemplate>
                        </muxc:ItemsRepeater>
                    </Flyout>
                </Button.Flyout>
            </Button>
            <Button
                x:Name="WikiButton"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Command="{x:Bind ViewModel.OpenWikiCommand}"
                IsEnabled="{x:Bind ViewModel.HasWikiLink, Mode=OneWay}">
                <app:IconTextBlock Symbol="Globe16" Text="{ext:Locale Name=Wiki}" />
            </Button>
        </Grid>
        <ScrollViewer Style="{StaticResource PageScrollViewerStyle}" Grid.Row="2">
            <StackPanel Margin="0,0,0,16" Spacing="12">
                <StackPanel Spacing="4">
                    <TextBlock
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="{ext:Locale Name=Introduce}" />
                    <TextBlock Text="{x:Bind ViewModel.Data.Description}" TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Spacing="4">
                    <TextBlock
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="{ext:Locale Name=Abilities}" />
                    <muxc:ItemsRepeater Margin="0,-4,0,0" ItemsSource="{x:Bind ViewModel.Abilities}">
                        <muxc:ItemsRepeater.Layout>
                            <muxc:StackLayout />
                        </muxc:ItemsRepeater.Layout>
                        <muxc:ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="community:ArchwingAbility">
                                <Grid
                                    Padding="0,12"
                                    BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="0,0,0,1"
                                    RowSpacing="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind Name}" />
                                    <TextBlock
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Grid.Row="1"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="{x:Bind Description}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </muxc:ItemsRepeater.ItemTemplate>
                    </muxc:ItemsRepeater>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</app:CenterPopup>
