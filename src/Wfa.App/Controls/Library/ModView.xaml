<app:CenterPopup
    x:Class="Wfa.App.Controls.Library.ModView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:Wfa.App.Controls.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:Wfa.App.Resources.Extensions"
    xmlns:local="using:Wfa.App.Controls.Library"
    xmlns:market="using:Wfa.Models.Market"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Title="{ext:Locale Name=ModDetail}"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <app:CommonImageEx
                Width="120"
                VerticalAlignment="Center"
                CornerRadius="{StaticResource ControlCornerRadius}"
                DecodePixelWidth="240"
                ImageUrl="{x:Bind ViewModel.Data.ImageName, Mode=OneWay, Converter={StaticResource LibraryImageConverter}}"
                Stretch="Uniform" />
            <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="{x:Bind ViewModel.Data.Name, Mode=OneWay}" />
                <StackPanel
                    HorizontalAlignment="Left"
                    Orientation="Horizontal"
                    Spacing="8">
                    <app:WfaIcon VerticalAlignment="Center" Symbol="{x:Bind ViewModel.Data.Polarity, Mode=OneWay, Converter={StaticResource PolarityConverter}}" />
                    <TextBlock
                        Style="{StaticResource CaptionTextBlockStyle}"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        Text="{x:Bind ViewModel.Data.CompatName}" />
                </StackPanel>

                <TextBlock
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.Description, Mode=OneWay}"
                    TextWrapping="Wrap" />
                <muxc:RatingControl
                    HorizontalAlignment="Left"
                    IsClearEnabled="True"
                    MaxRating="{x:Bind ViewModel.TotalLevel, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.IsShowLevel, Mode=OneWay}"
                    Value="{x:Bind ViewModel.CurrentLevel, Mode=TwoWay}" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="RelatedItemsButton"
                HorizontalAlignment="Stretch"
                IsEnabled="{x:Bind ViewModel.HasMarketItems, Mode=OneWay}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <app:WfaIcon
                        VerticalAlignment="Center"
                        FontSize="14"
                        Symbol="WarframeMarket" />
                    <TextBlock VerticalAlignment="Center" Text="{ext:Locale Name=RelatedMarketItem}" />
                </StackPanel>
                <Button.Flyout>
                    <Flyout FlyoutPresenterStyle="{StaticResource ThinPaddingFlyoutPresenterStyle}" Placement="Bottom">
                        <muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.MarketItems}">
                            <muxc:ItemsRepeater.Layout>
                                <muxc:StackLayout Spacing="2" />
                            </muxc:ItemsRepeater.Layout>
                            <muxc:ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="market:MarketItem">
                                    <app:CardPanel
                                        MinWidth="200"
                                        HorizontalAlignment="Stretch"
                                        Background="Transparent"
                                        Click="OnMarketItemClick"
                                        DataContext="{x:Bind}"
                                        IsEnableHoverAnimation="False"
                                        StrokeThickness="0">
                                        <Grid Padding="12,8" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <app:CommonImageEx
                                                Width="40"
                                                Height="40"
                                                VerticalAlignment="Center"
                                                DecodePixelWidth="80"
                                                ImageUrl="{x:Bind Thumb, Converter={StaticResource MarketThumbConverter}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Text="{x:Bind Name}"
                                                TextTrimming="CharacterEllipsis" />
                                        </Grid>
                                    </app:CardPanel>
                                </DataTemplate>
                            </muxc:ItemsRepeater.ItemTemplate>
                        </muxc:ItemsRepeater>
                    </Flyout>
                </Button.Flyout>
            </Button>
            <Button
                x:Name="WikiButton"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Command="{x:Bind ViewModel.OpenWikiCommand}"
                IsEnabled="{x:Bind ViewModel.HasWikiLink, Mode=OneWay}">
                <app:IconTextBlock Symbol="Globe16" Text="{ext:Locale Name=Wiki}" />
            </Button>
        </Grid>
    </Grid>
</app:CenterPopup>
